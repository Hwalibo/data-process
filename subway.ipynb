import pandas as pd
import numpy as np

# CSV 파일 로드 (CP949 인코딩)
df = pd.read_csv('서울교통공사_역사공중화장실정보_20250808.csv', encoding='cp949')

# 컬럼 이름 공백, 특수문자 제거
df.columns = df.columns.str.strip()
df.columns = df.columns.str.replace('\u200b', '', regex=True)

df.head()

df.info()

df.describe()

# 필요한 컬럼만 선택
cols = [
    '운영노선명', '역명', '위도', '경도', '지상 또는 지하 구분',
    '(근접) 출입구 번호', '남성용-대변기수', '여성용-대변기수',
    '남성용-소변기수', '남녀공용화장실여부'
]
df = df[cols].copy()

# 호선 번호 추출 (ex: "1호선" → 1)
df['line'] = df['운영노선명'].str.extract(r'(\d+)').astype(float).astype('Int64')

# 실내/실외 변환
df['in_out'] = df['지상 또는 지하 구분'].map({'지하': 'IN', '지상': 'OUT'})

# 게이트 번호 숫자 추출 (결측치 0으로)
df['num_gate'] = df['(근접) 출입구 번호'].str.extract(r'(\d+)')
df['num_gate'] = df['num_gate'].fillna(0).astype(int)

# 대변기/소변기 처리
df['num_big_toilet'] = (
    df['남성용-대변기수'].fillna(0) + df['여성용-대변기수'].fillna(0)
).astype(int)

df['num_small_toilet'] = (
    pd.to_numeric(df['남성용-소변기수'], errors='coerce').fillna(0)
).astype(int)

# 성별 처리
male_df = df.copy()
male_df['gender'] = 'M'

female_df = df.copy()
female_df['gender'] = 'F'

# 공용화장실 여부 반영
common_df = df[df['남녀공용화장실여부'] == 'Y'].copy()
common_df['gender'] = 'M'

# num_review, star 추가 후 초기화
for _df in [male_df, female_df, common_df]:
    _df['num_review'] = 0
    _df['star'] = 0.0

# name, latitude, longitude 매핑
for _df in [male_df, female_df, common_df]:
    _df.rename(columns={
        '역명': 'name',
        '위도': 'latitude',
        '경도': 'longitude',
    }, inplace=True)

# 불필요 컬럼 제거
final_cols = [
    'name', 'line', 'gender', 'in_out', 'latitude', 'longitude',
    'num_gate', 'num_big_toilet', 'num_small_toilet', 'num_review', 'star'
]

final_df = pd.concat([male_df, female_df, common_df])[final_cols].drop_duplicates()

# 결측치 처리
final_df = final_df.fillna({
    'num_gate': 0, 'num_big_toilet': 0, 'num_small_toilet': 0,
    'num_review': 0, 'star': 0.0, 'in_out': 'IN'
})

final_df.head(10)

final_df.to_csv('toilet_preprocessed.csv', index=False, encoding='utf-8-sig')
